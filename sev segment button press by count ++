#include <avr/io.h>
#include <avr/delay.h>

#define F_CPU 16000000UL

const uint8_t to_seg[] ={
		0b00111111,//0
		0b00000110,//1
		0b01011011,//2
		0b01001111,//3
		0b01100110,//4
		0b01101101,//5
		0b01111101,//6
		0b00000111,//7
		0b01111111,//8
		0b01101111,//9
		0b01110111,//A
		0b01111100,//b
		0b00111001,//C
		0b01011110,//d
		0b01111001,//E
		0b01110001 //F
};

int main (void)
{
 DDRD= 0xFF;
 DDRB &= ~(1<<DDB2); //PB2 input
 PORTD= 0x00;
 uint8_t count =0;

 while(1)
 {
   if(bit_is_clear(PINB,PB2))
   {
	   PORTD = to_seg[count];   //display count
	   _delay_ms(300);
	   if (count <15)
	   count++;       //increment count by 1 given
	   else
		count=0;   //count is smaller than 16
   }

 }

}






